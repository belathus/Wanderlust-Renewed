tooltips {
    # Choose what to toggle potion descriptions with. Valid options are: SHIFT, ALT, CTRL F3H, NONE. This has no effect server-side [default: SHIFT]
    S:descriptionMode=SHIFT

    # Set to false to hide the bad joke in the potion tooltip. This has no effect server-side [default: true]
    B:showBadJoke=true

    # Set to false to hide the instruction message to show potion descriptions. This has no effect server-side [default: true]
    B:showF3message=true

    # If set to true, lets JEI do the tooltip wrapping instead of fixed one when JEI is installed. This has no effect server-side [default: true]
    B:useJEITooltipWrapping=true
}


visual {
    # Set to false to set static color for potion of cheat death [default: true]
    B:rainbowCheatDeath=true

    # Set to false to disable custom particles [default: true]
    B:useCustomParticles=true

    # Set to true to use the old textures for combustion, cheat death, reincarnation, leech, pacifism, and piper [default: false]
    B:useOldTextures=false
